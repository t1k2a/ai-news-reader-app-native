{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api" },
    { "source": "/((?!api/).*)", "destination": "/index.html" }
  ],
  "functions": {
    "api/**/*.ts": {
      "includeFiles": "lib/**",
      "maxDuration": 300
    }
  },
  "crons": [
    {
      "path": "/api/cron/auto-post",
      "schedule": "0 23 * * *"
    },
    {
      "path": "/api/cron/auto-post",
      "schedule": "30 3 * * *"
    },
    {
      "path": "/api/cron/auto-post",
      "schedule": "0 11 * * *"
    }
  ]
}
