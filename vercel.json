{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "rewrites": [
    { "source": "/(?!api(?:/|$)).*", "destination": "/index.html" }
  ],
  "functions": {
    "api/index.cjs": {
      "memory": 1024,
      "maxDuration": 30,
      "includeFiles": "server/**"
    }
  }
}
